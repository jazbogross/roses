---
type JsonLd = Record<string, any>;

import { site } from "../content/site";

const {
  title,
  description,
  canonical,
  ogImage,
  ogDesc = description,
  ogImageAlt = "",
  robots = site.seo.robots ?? "index,follow",
  jsonLd,
  ogType
} = Astro.props as {
  title: string;
  description: string;
  canonical: string;
  ogImage?: string;
  ogDesc?: string;
  ogImageAlt?: string;
  robots?: string;
  jsonLd?: JsonLd | JsonLd[];
  ogType?: "website" | "article";
};

const jsonLdArray = Array.isArray(jsonLd) ? jsonLd : (jsonLd ? [jsonLd] : []);
const hasOg = Boolean(ogImage);

const computedOgType: "website" | "article" = ogType ?? (canonical.includes("/blog/") ? "article" : "website");

---

<title>{title}</title>

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="description" content={description} />
<link rel="canonical" href={canonical} />
<meta name="robots" content={robots} />

<meta property="og:type" content={computedOgType} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonical} />
{hasOg && <meta property="og:image" content={ogImage} />}
{hasOg && ogImageAlt && <meta property="og:image:alt" content={ogImageAlt} />}
<meta property="og:site_name" content={site.name} />
<meta property="og:locale" content="en_US" />


<meta name="twitter:card" content={hasOg ? "summary_large_image" : "summary"} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={ogDesc} />
{hasOg && <meta name="twitter:image" content={ogImage} />}

<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
<link rel="alternate icon" href="/favicon.ico" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />

{jsonLdArray.map((obj) => (
  <script type="application/ld+json" set:html={JSON.stringify(obj)} />
))}
